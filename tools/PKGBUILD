wget # getsource.sh
file # nowner.sh
which iputils 9base package-query # pkgdeps.sh (9base = read command)  #mimetype TODO get rid of this dependency
tar xz bzip2 unrar gzip unzip p7zip cabextract #extract.sh
arch-audit bc # risks.sh
